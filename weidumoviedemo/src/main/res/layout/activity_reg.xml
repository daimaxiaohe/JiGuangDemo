<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegActivity"
    android:background="@drawable/login">
    
    <ImageView
        android:id="@+id/logo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="128dp"
        android:src="@drawable/logo_xxhdpi"/>

    <ImageView
        android:id="@+id/name_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="@id/ed_name"
        app:layout_constraintTop_toTopOf="@id/ed_name"
        android:src="@drawable/register_icon_name_n_xxhdpi"/>

    <EditText
        android:id="@+id/ed_name"
        android:layout_width="280dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintBottom_toBottomOf="@id/name_img"
        android:background="@null"
        android:textSize="18sp"
        android:textColorHint="#eeeeee"
        android:hint="昵称"
        android:textColor="#eeeeee"
        android:paddingLeft="50dp"
        android:layout_marginTop="40dp"/>

    <View
        android:id="@+id/name_view"
        android:layout_width="280dp"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="@id/ed_name"
        app:layout_constraintRight_toRightOf="@id/ed_name"
        app:layout_constraintTop_toBottomOf="@id/ed_name"
        android:layout_marginTop="10dp"
        android:background="#fff"/>


    <ImageView
        android:id="@+id/phone_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="@id/ed_phone"
        app:layout_constraintTop_toTopOf="@id/ed_phone"
        android:src="@drawable/login_icon_phone_n_xxhdpi"/>

    <EditText
        android:id="@+id/ed_phone"
        android:layout_width="280dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_view"
        app:layout_constraintBottom_toBottomOf="@id/phone_img"
        android:background="@null"
        android:textSize="18sp"
        android:textColorHint="#eeeeee"
        android:hint="手机号"
        android:textColor="#eeeeee"
        android:paddingLeft="50dp"
        android:layout_marginTop="30dp"/>

    <View
        android:id="@+id/phone_view"
        android:layout_width="280dp"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="@id/ed_phone"
        app:layout_constraintRight_toRightOf="@id/ed_phone"
        app:layout_constraintTop_toBottomOf="@id/ed_phone"
        android:layout_marginTop="10dp"
        android:background="#fff"/>

    <ImageView
        android:id="@+id/pwd_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="@id/ed_pwd"
        app:layout_constraintTop_toTopOf="@id/ed_pwd"
        android:src="@drawable/login_icon_lock_n_xxhdpi"/>

    <EditText
        android:id="@+id/ed_pwd"
        android:layout_width="280dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phone_view"
        app:layout_constraintBottom_toBottomOf="@id/pwd_img"
        android:background="@null"
        android:textSize="18sp"
        android:textColorHint="#eeeeee"
        android:hint="登录密码"
        android:textColor="#eeeeee"
        android:paddingLeft="50dp"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintRight_toRightOf="@id/ed_pwd"
        app:layout_constraintTop_toTopOf="@id/ed_pwd"
        app:layout_constraintBottom_toBottomOf="@id/ed_pwd"
        android:src="@drawable/login_icon_eye_n_xxhdpi"/>

    <View
        android:id="@+id/pwd_view"
        android:layout_width="280dp"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="@id/ed_pwd"
        app:layout_constraintRight_toRightOf="@id/ed_pwd"
        app:layout_constraintTop_toBottomOf="@id/pwd_img"
        android:layout_marginTop="10dp"
        android:background="#fff"/>

    <Button
        android:id="@+id/reg"
        android:layout_width="280dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="130dp"
        android:textColor="#fff"
        android:text="注册"
        android:background="@drawable/button_shape"/>

</android.support.constraint.ConstraintLayout>