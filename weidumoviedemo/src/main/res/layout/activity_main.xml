<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:background="@drawable/login">

    <ImageView
        android:id="@+id/phone_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="@id/ed_phone"
        app:layout_constraintTop_toTopOf="@id/ed_phone"
        android:src="@drawable/login_icon_phone_n_xxhdpi"/>

    <EditText
        android:id="@+id/ed_phone"
        android:layout_width="280dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/phone_img"
        android:background="@null"
        android:textSize="18sp"
        android:textColorHint="#eeeeee"
        android:hint="手机号"
        android:textColor="#eeeeee"
        android:paddingLeft="50dp"
        android:layout_marginTop="150dp"/>

    <View
        android:id="@+id/phone_view"
        android:layout_width="280dp"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="@id/ed_phone"
        app:layout_constraintRight_toRightOf="@id/ed_phone"
        app:layout_constraintTop_toBottomOf="@id/ed_phone"
        android:layout_marginTop="10dp"
        android:background="#fff"/>

    <ImageView
        android:id="@+id/pwd_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="@id/ed_pwd"
        app:layout_constraintTop_toTopOf="@id/ed_pwd"
        android:src="@drawable/login_icon_lock_n_xxhdpi"/>

    <EditText
        android:id="@+id/ed_pwd"
        android:layout_width="280dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phone_view"
        app:layout_constraintBottom_toBottomOf="@id/pwd_img"
        android:background="@null"
        android:textSize="18sp"
        android:textColorHint="#eeeeee"
        android:hint="登录密码"
        android:textColor="#eeeeee"
        android:paddingLeft="50dp"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintRight_toRightOf="@id/ed_pwd"
        app:layout_constraintTop_toTopOf="@id/ed_pwd"
        app:layout_constraintBottom_toBottomOf="@id/ed_pwd"
        android:src="@drawable/login_icon_eye_n_xxhdpi"/>

    <View
        android:id="@+id/pwd_view"
        android:layout_width="280dp"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="@id/ed_pwd"
        app:layout_constraintRight_toRightOf="@id/ed_pwd"
        app:layout_constraintTop_toBottomOf="@id/pwd_img"
        android:layout_marginTop="10dp"
        android:background="#fff"/>
    
    <TextView
        android:id="@+id/reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/pwd_view"
        app:layout_constraintTop_toBottomOf="@id/pwd_view"
        android:layout_marginTop="20dp"
        android:textColor="#fff"
        android:textSize="14sp"
        android:text="快速注册"/>
    
    <Button
        android:id="@+id/login"
        android:layout_width="280dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="130dp"
        android:textColor="#fff"
        android:text="登录"
        android:background="@drawable/button_shape"/>

    <View
        android:layout_width="90dp"
        android:layout_height="1dp"
        android:background="#eeeeee"
        app:layout_constraintLeft_toLeftOf="@id/login"
        app:layout_constraintTop_toBottomOf="@id/login"
        app:layout_constraintBottom_toBottomOf="@id/threelogin"
        android:layout_marginTop="40dp"/>

    <View
        android:layout_width="90dp"
        android:layout_height="1dp"
        android:background="#eeeeee"
        app:layout_constraintRight_toRightOf="@id/login"
        app:layout_constraintTop_toBottomOf="@id/login"
        app:layout_constraintBottom_toBottomOf="@id/threelogin"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/threelogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/login"
        app:layout_constraintRight_toRightOf="@id/login"
        app:layout_constraintTop_toBottomOf="@id/login"
        android:layout_marginTop="40dp"
        android:textSize="10sp"
        android:text="第三方账号快速登录"
        android:textColor="#ffffff"/>

</android.support.constraint.ConstraintLayout>